<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

    <bean id="helloWorldImpl1" class="cuj.spring.aop.demo.HelloWorldImpl1" />
    <bean id="helloWorldImpl2" class="cuj.spring.aop.demo.HelloWorldImpl2" />
    <bean id="timeHandler" class="cuj.spring.aop.demo.TimeHandler" />

    <aop:config>
        <aop:aspect id="time" ref="timeHandler">
            <aop:pointcut id="cheben" expression="execution(* cuj.spring.aop.HelloWorld.doPrint(..))" />
            <aop:before method="printTime" pointcut-ref="cheben" />
            <aop:after method="printTime" pointcut-ref="cheben" />
        </aop:aspect>
    </aop:config>
</beans>